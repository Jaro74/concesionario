<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">
  <persistence-unit name="AutoPU" transaction-type="RESOURCE_LOCAL">
    <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
    <class>com.mycompany.automovil.logica.Automovil</class>
    <properties>
      <property name="jakarta.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/automovil?serverTimezone=UTC"/>
      <property name="jakarta.persistence.jdbc.user" value="root"/>
      <property name="jakarta.persistence.jdbc.password" value="Rafter+123"/>
      <property name="jakarta.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>

      <!-- Opcional: crea automÃ¡ticamente las tablas -->
      <property name="jakarta.persistence.schema-generation.database.action" value="create"/>

      <!-- Dialecto JDBC personalizado si lo necesitas (no obligatorio con EclipseLink) -->
      <!-- <property name="eclipselink.target-database" value="MySQL"/> -->
    </properties>
  </persistence-unit>
</persistence>

